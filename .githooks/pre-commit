#!/bin/sh
# Pre-commit hook for code quality checks

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Checking ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix the issues before committing."
  exit 1
fi

# Run prettier check
echo "ğŸ¨ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Run 'npm run format' to fix formatting."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run ci:test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
