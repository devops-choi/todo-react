{
  "name": "react-remote",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "json-server": "^1.0.0-beta.3",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/user-event": "^14.0.0",
    "gh-pages": "^6.3.0"
  },
  "homepage": "https://devops-chio.github.io/todo-react",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:sync": "react-scripts test --runInBand --verbose --watchAll=false",
    "test:unit": "npm run test:sync -- --testPathPattern=\"(components|services|basic|App\\.test)\"",
    "test:integration": "npm run test:sync -- --testPathPattern=\"(integration|accessibility)\"",
    "test:performance": "npm run test:sync -- --testPathPattern=performance",
    "test:coverage": "npm run test:sync -- --coverage",
    "test:watch": "npm test -- --watch",
    "eject": "react-scripts eject",
    "database": "json-server --watch database.json --port 5000",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "echo 'No TypeScript configured'",
    "ci:test": "npm run test:sync -- --coverage --passWithNoTests",
    "ci:build": "npm run lint && npm run format:check && npm run ci:test && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
